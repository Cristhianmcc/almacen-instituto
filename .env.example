# Variables de entorno para el sistema de almacén
# INSTRUCCIONES: Copia este archivo como .env y completa con tus credenciales reales

# Configuración de Supabase
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_ANON_KEY=tu_clave_anonima_aqui
SUPABASE_SERVICE_ROLE_KEY=tu_clave_servicio_aqui

# Configuración del servidor
PORT=3003
NODE_ENV=development
API_VERSION=v1

# Configuración de alertas
LOW_STOCK_THRESHOLD=10
EXPIRATION_ALERT_DAYS=30
CRITICAL_STOCK_THRESHOLD=5

# Configuración de la aplicación
INSTITUTE_NAME="Instituto Educativo"
INSTITUTE_CODE="IE001"
DEPARTAMENTAL_LIMA_CODE="DEPT_LIMA"

# Configuración de cron jobs (para alertas automáticas)
ALERT_CRON_SCHEDULE="0 8 * * *"  # Todos los días a las 8 AM

# Configuración de logs
LOG_LEVEL=info
